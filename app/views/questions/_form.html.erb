<%= render 'shared/errors', object: resource %>

<%= form_with model: resource, local: true do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :title %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :title, placeholder: 'Title', class: 'form-control' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, placeholder: 'Body', class: 'form-control' %>
      <%#= f.text_area :body, required: true, minlength: 2, placeholder: "Body" %>
    </div>
  </div>

  <%= f.submit 'Submit question!', class: 'btn btn-primary' %>
<% end %>